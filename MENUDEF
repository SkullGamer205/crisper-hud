	Option "$BD_CRISPY_HIGHLIGHTARMS"		, "bd_crispyhud_highlight_arms"		, "ONOFF"
	Option "$BD_CRISPY_HIGHLIGHTAMMOS"		, "bd_crispyhud_highlight_ammo"		, "ONOFF"
	
	Option "$BD_CRISPY_BOOM_COLORS"	, "bd_crispyhud_boom_colors"				, "ONOFF"
}
